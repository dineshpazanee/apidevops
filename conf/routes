# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET        /                                   controllers.HomeController.index()

GET        /scala/comet                        controllers.ScalaCometController.index()
GET        /scala/comet/liveClock              controllers.ScalaCometController.streamClock()

GET        /scala/eventSource                  controllers.ScalaEventSourceController.index()
GET        /scala/eventSource/liveClock        controllers.ScalaEventSourceController.streamClock()

GET        /login					       		controllers.HomeController.login

POST        /loginuser					       	controllers.HomeController.loginUser()

GET        /createuser					       controllers.HomeController.createuser()

POST        /adduser					       		controllers.HomeController.addUser()

POST        /adduser2					       		controllers.HomeController.addUser2()

GET        /user					       		controllers.HomeController.user()



GET        /demo					       		controllers.HomeController.demo()

GET        /register					       		controllers.HomeController.register

POST    /userPost					       		controllers.HomeController.userPost()

POST    /createuser					       		controllers.HomeController.createperson()

# An example controller showing a sample home page
GET     /persons                     controllers.PersonController.findAll(next: Option[String])
GET     /persons/:personId           controllers.PersonController.find(personId: java.util.UUID)
DELETE  /persons/:personId           controllers.PersonController.delete(personId: java.util.UUID)


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                       controllers.Assets.at(path="/public", file)
